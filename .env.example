# ============================================
# REQUIRED ENVIRONMENT VARIABLES
# ============================================

# Database connection string (PostgreSQL)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://gitolink:gitolink123@localhost:5432/gitolink"

# Direct database connection for migrations (same as DATABASE_URL for local dev)
POSTGRES_URL="postgresql://gitolink:gitolink123@localhost:5432/gitolink"

# JWT Secret for signing authentication tokens
# Generate a strong random string (at least 32 characters)
# DO NOT use the default value in production!
JWT_SECRET="your-super-secret-key-change-this-in-production-min-32-chars"

# Application URL
NEXTAUTH_URL="http://localhost:3000"

# ============================================
# OPTIONAL ENVIRONMENT VARIABLES
# ============================================

# Public application URL (used for QR codes, etc.)
# Defaults to NEXTAUTH_URL if not set
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Cron job secret for securing cron endpoints
# Generate a strong random string
CRON_SECRET="your-cron-secret-key-change-this-in-production"

# ============================================
# SUPABASE CONFIGURATION (for file uploads)
# Get these from your Supabase project settings:
# https://supabase.com/dashboard/project/_/settings/api
# ============================================
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key-here"

# Optional: Service role key for server-side operations (keep secret!)
# SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# ============================================
# CLOUDINARY CONFIGURATION (for image uploads)
# Get these from your Cloudinary dashboard
# ============================================
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# ============================================
# UNSPLASH CONFIGURATION (for background images)
# Get this from https://unsplash.com/developers
# ============================================
NEXT_PUBLIC_UNSPLASH_ACCESS_KEY="your-unsplash-access-key"
