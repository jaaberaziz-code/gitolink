generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("POSTGRES_URL")
}

model User {
  id              String   @id @default(cuid())
  email           String   @unique
  username        String   @unique
  password        String
  name            String?
  bio             String?
  avatar          String?
  avatar_url      String?  // Supabase Storage URL for avatar
  theme           String   @default("gradient-1")
  
  // Background customization
  background_type  String   @default("gradient") // 'gradient', 'solid', 'image'
  background_value String   @default("cyberpunk") // hex color, gradient CSS, or image URL
  
  // Custom CSS for advanced users
  custom_css      String?  @db.Text
  
  // Design customization
  layout           String   @default("classic") // 'classic', 'hero', 'minimal'
  font_family      String   @default("Inter") // Google Font name
  title_color      String   @default("#ffffff") // Hex color for title text
  button_style     String   @default("rounded") // 'rounded', 'pill', 'square', 'glass'
  button_color     String   @default("#3b82f6") // Hex color for buttons
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  links Link[]
  clicks Click[]
}

model Link {
  id        String   @id @default(cuid())
  title     String
  url       String
  icon      String?
  order     Int      @default(0)
  active    Boolean  @default(true)
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  clicks Click[]

  @@index([userId])
}

model Click {
  id        String   @id @default(cuid())
  linkId    String
  userId    String
  ip        String?
  country   String?
  city      String?
  device    String?
  browser   String?
  os        String?
  referrer  String?
  createdAt DateTime @default(now())

  link Link @relation(fields: [linkId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([linkId])
  @@index([userId])
  @@index([createdAt])
}